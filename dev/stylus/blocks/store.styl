.store
  &__row
    display flex
    flex-wrap wrap
    justify-content space-between

  &__col
    &:first-child
      width calc(50% + 92px)

    &+&
      width calc(50% - 122px)

  &__map
    width 100%
    height 900px

  &__item
    margin-bottom 50px

    &:last-child
      margin-bottom 0

    &-top
      display flex
      flex-wrap wrap
      align-items flex-start
      margin-bottom 20px

    &-title
      color #3c3c3c
      font-size 36px
      font-weight 600
      line-height 42px
      margin-right 35px

    &-read-review
      color #3c3c3c
      font-size 15px
      font-weight 400
      line-height 19px
      border-bottom 2px dotted #FFC100
      transition border .7s
      margin-top 20px

      &:hover
        border-bottom-color transparent

    &-text
      margin-bottom 25px


