.catalog
  position relative

  .publ
    margin-left 15px
    margin-right 15px

    @media $LandscapeMin
      margin-left 0
      margin-right 0

  &__products
    display flex
    flex-wrap wrap
    margin 0 -15px
    width calc(100% + 30px)

    @media $LandscapeMin
      margin 0
      width 100%

  &__product
    width calc(50% - 30px)
    background-color #f3e7d5
    margin 0 15px 30px

    @media $LandscapeMin
      width 100%
      margin 0 0 30px

    &:hover
      .catalog__product-hover
        opacity 1
        visibility visible

      .markers__item_yellow
        color #fff
        background-color #3c3e7f

    &-overimg
      display block
      position relative
      width 100%
      padding-top 81.555%
      overflow hidden
      z-index 1

    &-img
      position absolute
      left 50%
      top 50%
      transform translate(-50%,-50%)
      max-width 85%
      max-height 85%

    &-hover
      width 100%
      height 100%
      position absolute
      top 0
      left 0
      background-repeat no-repeat
      background-position center
      background-size cover
      z-index -1
      opacity 0
      visibility hidden
      transition opacity .4s, visibility .4s

    &-info
      border-top 1px solid rgba(#4d4d4d, .2)
      padding 25px 35px

      @media $LandscapeMedium
        padding 20px 20px 25px

      &-top
        display flex
        flex-wrap wrap
        align-items flex-start

    &-title
      color #3c3c3c
      font-size 36px
      font-weight 600
      line-height 36px
      align-self flex-start
      margin-right 20px

      @media $desktopMedium
        font-size 30px
        line-height 34px

      @media $PortraitMax
        font-size 26px
        line-height 28px

      span
        border-bottom 2px solid #FFC100
        transition border .4s

      &:hover
        color #3c3e7f

        span
          border-color transparent

    &-descr
      margin-top 15px
      color #3c3c3c
      font-size 16px
      font-weight 400
      line-height 24px

  &__filter
    position absolute
    display inline-flex
    top -76px
    right 0

    &:before
      content '/'
      position relative
      display inline-block
      vertical-align top
      color #3c3c3c
      font-family Montserrat
      font-size 15px
      font-weight 600
      line-height 19px
      margin-right 15px

    &-item
      margin-left 25px

      &:first-child
        margin-left 0

    &-href
      color #3c3c3c
      font-size 15px
      font-weight 600
      line-height 19px
      border-bottom 2px dotted #FFC100
      white-space nowrap
      transition border .4s

      &:hover, &_active
        border-bottom-color transparent

  &__more
    &-over
      margin-top 15px
      text-align center

    &-href
      color #3c3c3c
      font-size 15px
      font-weight 600
      line-height 19px
      border-bottom 2px dotted #FFC100
      transition border .4s

      &:hover
        border-bottom-color transparent
