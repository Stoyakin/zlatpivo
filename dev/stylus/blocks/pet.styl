.pet
  display inline-flex
  align-items flex-end

  @media $PortraitMax
    margin-top 25px

  &__item
    position relative
    padding-left 18px
    margin-right 30px

    &:last-child
      margin-right 0

    &-title
      position absolute
      left 14px
      bottom 0
      width 100%
      color #fff
      font-size 14px
      font-weight 600
      line-height 16px
      transform rotate(-90deg)
      transform-origin left bottom
      white-space nowrap

    &-img
      overflow hidden

    svg
      width 100%
      height 100%

    &_v1, &_v2
      .pet__item-img
        width 34px
        height 86px
        background url('data:image/png;base64,') no-repeat center

      svg
        position relative
        top 1px
        left 1px
        fill #FFC100
        z-index -1

    &_v2
      .pet__item-img
        width 34px
        height 111px
        background url('data:image/png;base64,') no-repeat center

      svg
        position relative
        top 1px
        left 0
        fill #FFC100
        z-index -1
